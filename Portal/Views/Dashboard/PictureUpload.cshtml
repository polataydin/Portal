@model Portal.Models.GeneralModel
@Styles.Render("~/assets/global/plugins/jquery-file-upload/css/jquery.fileupload.css")
@Styles.Render("~/assets/global/plugins/jquery-file-upload/css/jquery.fileupload-ui.css")

<style>
    .centerer {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div id="responsive_changepicture" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@Model.LocalizationModel.ChangePictureHeader</h4>
            </div>
            <div class="modal-body" id="picturedialog">
                <div class="scroller" style="height: 300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                            <div class="portlet light">
                                <div class="portlet-body">
                                    <table class="table table-striped table-bordered table-hover grid" id="table_responsive_changepicture">
                                        @if (Model.MenuViewModel!= null &&  Model.MenuViewModel.Picture != null && Model.MenuViewModel.Picture != String.Empty)
                                        {
                                            <img id="profilerinside" alt="" class="img-square centerer" style="height:150px" src="data:image/png;base64,@Model.MenuViewModel.Picture">
                                        }
                                        else
                                        {
                                            <img alt="" id="profilerinside" class="img-square centerer" style="height: 150px" src="~/Content/Images/anonymous.png">
                                        }
                                        <h4 id="browsetext" style="text-align: center; margin-top: 15px"></h4>
                                    </table>


                                </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <span class="btn blue fileinput-button" style="float: left" id="spanfiles">
                    <i class="fa fa-plus"></i>
                    <span>@Model.LocalizationModel.Browse </span>
                    <input type="file" name="files[]" id="files" multiple="">
                </span>

                <button type="button" class="btn green" id="updatepicture">@Model.LocalizationModel.Update </button>


            </div>
        </div>
    </div>
</div>
