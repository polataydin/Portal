@model Portal.Models.LookupModel
@{ String id = Model.Id + "_" + Model.Count;}

<div id="responsive_@id" class="modal fade modal-scroll" tabindex="-1" aria-hidden="true" data-replace="true">
    <div class="modal-dialog modal-full" >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@Model.LocalizationModel.LookupHeader</h4>
            </div>
            <div class="modal-body">
                <div class="scroller" style="height: 300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                            <div class="portlet light">
                                <div class="portlet-body">
                                    <table class="table table-striped table-bordered table-hover grid" id="@id" data-relatedfield="@Model.ReturnField" data-modaltype="lookup">
                                    </table>
                                </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default">@Model.LocalizationModel.Close</button>
                @*<button type="button" class="btn green">Save changes</button>*@
            </div>
        </div>
    </div>
</div>

<script>
   
    var jsId = @Html.Raw("'" + id + "'");
    $("#responsive_" + jsId).find(".modal-footer").find("button").bind("click", function () {
        $(this).closest('.modal').modal("hide");
    });

</script>